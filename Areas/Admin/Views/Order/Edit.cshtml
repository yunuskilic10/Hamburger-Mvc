@model MVCProjectHamburger.Models.ViewModels.ShoppingCartVM

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ShoppingCartVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            @if (Model.MenuSize != null)
            {
                <div class="form-group">
                    <label for="menuSize">Menu Size:</label>
                    <select class="form-control menusize" name="menuSize" id="menuSize">
                        <option value="1">Small</option>
                        <option value="10">Medium</option>
                        <option value="20">Large</option>
                    </select>
                </div>

            }
            else
            {
                <div class="form-group">
                    <input type="hidden" asp-for="MenuSize" class="form-control">
                    <span asp-validation-for="MenuSize" class="text-black"></span>
                </div>
            }
            <div class="form-group">
                <input type="hidden" asp-for="TotalPrice" class="form-control" />
                <span asp-validation-for="TotalPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
