@using MVCProjectHamburger.Models.Entities.Concrete;
@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<ul class="navbar-nav">
    
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a style=" font-size:30px" class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button style=" font-size:30px" type="submit" class="nav-link btn btn-link text-light"> Logout </button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="btn btn-light " style=" font-size:30px " asp-area="Identity" asp-page="/Account/Register"> Register </a>
    </li>
    <li class="nav-item">
            <a class="btn btn-light " style="margin-left: 15px; font-size:30px;"  asp-area="Identity" asp-page="/Account/Login"> Login </a>
    </li>
}
</ul>
